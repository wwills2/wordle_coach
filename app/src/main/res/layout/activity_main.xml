<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="364dp"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="26dp"
            android:background="@color/cardview_dark_background"
            android:columnCount="5"
            android:rowCount="2"
            app:layout_constraintBottom_toTopOf="@+id/OutputBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".MainActivity">


        <EditText
                android:id="@+id/gridInput_00"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/shape"
                android:ems="10"
                android:inputType="text"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:gravity="center"
                />

        <EditText
                android:id="@+id/gridInput_01"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/cardview_dark_background"
                android:ems="10"
                android:inputType="text"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:gravity="center"/>

        <EditText
                android:id="@+id/gridInput_02"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@color/cardview_dark_background"
                android:ems="10"
                android:inputType="text"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:gravity="center"/>

        <EditText
                android:id="@+id/gridInput_03"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@color/cardview_dark_background"
                android:ems="10"
                android:inputType="text"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:gravity="center"/>

        <EditText
                android:id="@+id/gridInput_04"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_row="0"
                android:layout_column="4"
                android:background="@color/cardview_dark_background"
                android:ems="10"
                android:inputType="text"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:gravity="center"/>
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="310dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:text="Wordle Solver"
        android:textSize="20pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="173dp"
        android:layout_height="59dp"
        android:layout_marginBottom="47dp"
        android:text="Submit Response"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/OutputBottom"
        app:layout_constraintTop_toBottomOf="@+id/OutputBottom" />

    <TextView
        android:id="@+id/OutputBottom"
        android:layout_width="172dp"
        android:layout_height="25dp"
        android:ems="10"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>