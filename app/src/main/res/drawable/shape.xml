<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="16dp"
    android:insetRight="16dp">
    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent"/>
            </shape>
        </item>

        <item
            android:left="5dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="5dp">

            <shape>
                <stroke
                    android:width="2dp"
                    android:color="#D3D3D3"/>
            </shape>
        </item>
    </layer-list>
</inset>